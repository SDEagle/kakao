<h1><%= tm 'listing', User, :many %></h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= link_to t('show'), user %></td>
      <td><%= link_to t('edit'), edit_user_path(user) %></td>
      <td><%= link_to t('destroy'), user, method: :delete, data: { confirm: t('confirm') } %></td>
    </tr>
    <% end %>
  </tbody>
</table>