<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :text %>
    <%= f.input :tag_list %>

    <div id="text" contenteditable="true" style="min-height: 50px; border: 1px solid"></div>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
